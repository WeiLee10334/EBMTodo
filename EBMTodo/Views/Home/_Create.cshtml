@model EBMTodo.Models.Todo.EBMProjectWorking

@{
    ViewBag.Title = "Create";
    Layout = "";
}
@using (Ajax.BeginForm("Create", "Home", new { area = "" }, new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "Working_List" }, new { id = "ajax_Onpay_Normal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Today Working</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CreateDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CreateDateTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateDateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PID, "PID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("PID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.workingType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EnumDropDownListFor(model => model.workingType, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.workingType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.WokingHour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.WokingHour, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.WokingHour, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="pull-right">
                <input type="submit" value="Create" class="btn btn-default form-control" />
            </div>
        </div>

        </div>
}